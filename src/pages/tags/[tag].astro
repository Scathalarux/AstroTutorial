//Modificaciones para trabajar con collections
export async function getStaticPaths() {
  //obtenemos los posts
  const allPosts = await getCollection('blog');

  //obtenemos todas las etiquetas, sin repetirlas
  const uniqueTags = [
    ...new Set(allPosts.map((post: any) => post.data.tags).flat()),
  ];

  //devolvemos el listado de objetos post, con sus params (el nombre de la page route) y props (data que se le quiere pasar a esas p치ginas)
  return uniqueTags.map(tag => {
    //filtramos los post que correspondan al tag especificado
    const filteredPosts = allPosts.filter((post: any) =>
      post.data.tags.includes(tag)
    );

    return {
      params: { tag },
      props: { posts: filteredPosts },
    };
  });
}

const { tag } = Astro.params;
const { posts } = Astro.props;
---

<BaseLayout pageTitle={tag}>
  <p>Posts tagged with {tag}</p>
  <ul>
    {
      posts.map((post: any) => (
        //<BlogPost url={post.url} title={post.frontmatter.title} />
        <BlogPost url={`/posts/${post.id}/`} title={post.data.title} />
      ))
    }
  </ul>
</BaseLayout>
